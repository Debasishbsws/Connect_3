<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="409dp"
        android:layout_height="409dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/board"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/strImageView1"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_margin="0dp"
            android:onClick="dropin1"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/strImageView6"
            android:layout_width="145dp"
            android:layout_height="108dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="9dp"
            android:onClick="dropin1"
            app:layout_column="2"
            app:layout_row="1"
            android:tag="5" />

        <ImageView
            android:id="@+id/strImageView3"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="9dp"
            android:onClick="dropin1"
            app:layout_column="2"
            app:layout_row="0"
            android:tag="2" />

        <ImageView
            android:id="@+id/strImageView4"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="15dp"
            android:onClick="dropin1"
            app:layout_column="1"
            app:layout_row="0"
            android:tag="1" />

        <ImageView
            android:id="@+id/strImageView5"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginTop="25dp"
            android:onClick="dropin1"
            app:layout_column="0"
            app:layout_row="1"
            android:tag="3" />

        <ImageView
            android:id="@+id/strImageView6"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="28dp"
            android:onClick="dropin1"
            app:layout_column="1"
            app:layout_row="2"
            android:tag="7" />

        <ImageView
            android:id="@+id/strImageView7"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:onClick="dropin1"
            app:layout_column="1"
            app:layout_row="1"
            android:tag="4" />

        <ImageView
            android:id="@+id/strImageView8"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginTop="28dp"
            android:onClick="dropin1"
            app:layout_column="0"
            app:layout_row="2"
            android:tag="6"/>

        <ImageView
            android:id="@+id/strImageView9"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="28dp"
            android:onClick="dropin1"
            app:layout_column="2"
            app:layout_row="2"
            android:tag="8"/>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="164dp"
        android:text="winner"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="154dp"
        android:onClick="playAgain"
        android:text="Play Again"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>